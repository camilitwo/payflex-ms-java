{
  "phases": {
    "setup": {
      "nixPkgs": ["java", "maven"]
    },
    "build": {
      "cmds": [
        "cd .. && mvn clean package -pl auth-bff -am -DskipTests",
        "cp ../auth-bff/target/auth-bff-*.jar app.jar"
      ]
    },
    "start": {
      "cmd": "java -Dserver.port=$PORT -Xmx512m -Xms256m -XX:+UseContainerSupport -XX:MaxRAMPercentage=75.0 -jar app.jar"
    }
  }
}
