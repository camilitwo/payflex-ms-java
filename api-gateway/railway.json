{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "NIXPACKS",
    "buildCommand": "cd api-gateway && ../mvnw -DskipTests package"
  },
  "deploy": {
    "startCommand": "java -Dserver.port=$PORT -jar api-gateway/target/api-gateway-1.0.0.jar",
    "restartPolicyType": "ON_FAILURE",
    "restartPolicyMaxRetries": 10,
    "healthcheckPath": "/actuator/health",
    "healthcheckTimeout": 300
  }
}

