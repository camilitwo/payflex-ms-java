{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "NIXPACKS",
    "buildCommand": "cd /app && mvn clean package -DskipTests -pl merchant-service -am"
  },
  "deploy": {
    "startCommand": "java -Dserver.port=$PORT $JAVA_TOOL_OPTIONS -jar /app/merchant-service/target/merchant-service-1.0.0.jar",
    "restartPolicyType": "ON_FAILURE",
    "restartPolicyMaxRetries": 10,
    "healthcheckPath": "/actuator/health",
    "healthcheckTimeout": 300
  }
}
